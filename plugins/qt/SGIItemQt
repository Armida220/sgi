#pragma once
#include <sgi/plugins/SGIItemBase.h>
#include <QtCore/QSharedPointer>
#include <QtGui/QPaintDevice>
#include <QtGui/QIcon>
#include <QtGui/QSurface>

namespace sgi {
namespace support {
    class SGIHostItemQt;
    class SGIHostItemQtMeta;
    class SGIHostItemQtPaintDevice;
    class SGIHostItemQtSurface;
    class SGIHostItemQtIcon;
}

enum SGIItemType_qt
{
    SGIItemType_plugin_qt = SGIItemTypePluginBaseQt,
    SGIItemTypeMethods,
    SGIItemTypeWidgets,
    SGIItemTypeSurfaceFormat,
    SGIItemTypeContext,
    SGIItemTypeContextExtensions,
    SGIItemTypeSurface,
    SGIItemTypeProperties,
    SGIItemTypeSystemEnvironment,
    SGIItemTypeShaderProgramShaders,
    SGIItemTypeShaderSourceCode,
    SGIItemTypeShaderLog,
    SGIItemTypePalette,
};

typedef SGIItemHolderT<QObject> SGIItemHolderQt;
typedef SGIItemHolderT<QMetaObject> SGIItemHolderQtMeta;
typedef SGIItemHolderT<QPaintDevice, QSharedPointer<QPaintDevice> > SGIItemHolderQtPaintDevice;
typedef SGIItemHolderT<QSurface, QSharedPointer<QSurface> > SGIItemHolderQtSurface;
typedef SGIItemHolderT<QIcon> SGIItemHolderQtIcon;

typedef SGIItemT<support::SGIHostItemQt, SGIItemHolderQt> SGIItemQt;
typedef SGIItemT<support::SGIHostItemQtMeta, SGIItemHolderQtMeta> SGIItemQtMeta;
typedef SGIItemT<support::SGIHostItemQtPaintDevice, SGIItemHolderQtPaintDevice> SGIItemQtPaintDevice;
typedef SGIItemT<support::SGIHostItemQtSurface, SGIItemHolderQtSurface> SGIItemQtSurface;
typedef SGIItemT<support::SGIHostItemQtIcon, SGIItemHolderQtIcon> SGIItemQtIcon;

} // namespace sgi
