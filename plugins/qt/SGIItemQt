#pragma once
#include <sgi/plugins/SGIItemBase.h>
#include <QtCore/QSharedPointer>
#include <QtGui/QPaintDevice>
#include <QtGui/QIcon>
#include <QtGui/QSurface>

namespace sgi {
namespace support {
    class SGIHostItemQt;
    class SGIHostItemQtMeta;
    class SGIHostItemQtPaintDevice;
    class SGIHostItemQtSurface;
    class SGIHostItemQtIcon;
}

enum SGIItemType_qt
{
    SGIItemType_plugin_qt = SGIItemTypePluginBaseQt,
    SGIItemTypeMethods,
    SGIItemTypeWidgets,
    SGIItemTypeSurfaceFormat,
    SGIItemTypeContext,
    SGIItemTypeContextExtensions,
    SGIItemTypeSurface,
    SGIItemTypeProperties,
    SGIItemTypeSystemEnvironment,
    SGIItemTypeShaderProgramShaders,
    SGIItemTypeShaderSourceCode,
    SGIItemTypeShaderLog,
    SGIItemTypePalette,
};

typedef SGIItemHolderPtr<QObject> SGIItemHolderQtType;
typedef SGIItemHolderPtr<QMetaObject> SGIItemHolderQtMetaType;
typedef SGIItemHolderSharedPtrQt<QPaintDevice, QSharedPointer<QPaintDevice> > SGIItemHolderQtPaintDeviceType;
typedef SGIItemHolderSharedPtrQt<QSurface, QSharedPointer<QSurface> > SGIItemHolderQtSurfaceType;
typedef SGIItemHolderPtr<QIcon> SGIItemHolderQtIconType;

typedef SGIItemHolderT<SGIItemHolderQtType> SGIItemHolderQt;
typedef SGIItemHolderT<SGIItemHolderQtMetaType> SGIItemHolderQtMeta;
typedef SGIItemHolderT<SGIItemHolderQtPaintDeviceType> SGIItemHolderQtPaintDevice;
typedef SGIItemHolderT<SGIItemHolderQtSurfaceType> SGIItemHolderQtSurface;
typedef SGIItemHolderT<SGIItemHolderQtIconType> SGIItemHolderQtIcon;

typedef SGIItemT<support::SGIHostItemQt, SGIItemHolderQt> SGIItemQt;
typedef SGIItemT<support::SGIHostItemQtMeta, SGIItemHolderQtMeta> SGIItemQtMeta;
typedef SGIItemT<support::SGIHostItemQtPaintDevice, SGIItemHolderQtPaintDevice> SGIItemQtPaintDevice;
typedef SGIItemT<support::SGIHostItemQtSurface, SGIItemHolderQtSurface> SGIItemQtSurface;
typedef SGIItemT<support::SGIHostItemQtIcon, SGIItemHolderQtIcon> SGIItemQtIcon;

template<typename OBJECT_TYPE>
inline OBJECT_TYPE * objectPtrFromItemHolder(const QSharedPointer<OBJECT_TYPE> & obj)
{
    return static_cast<OBJECT_TYPE*>(obj.get());
}

} // namespace sgi
