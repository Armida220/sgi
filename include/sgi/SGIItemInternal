#pragma once

#include "plugins/SGIItemBase.h"

namespace sgi {
namespace support {
    class SGIHostItemInternal;
}

typedef SGIItemHolderSharedPtr<osg::Referenced, osg::observer_ptr<osg::Referenced> > SGIItemHolderInternalType;
typedef SGIItemHolderT<SGIItemHolderInternalType> SGIItemHolderInternal;

typedef SGIItemT<support::SGIHostItemInternal, SGIItemHolderInternal> SGIItemInternal;

struct InternalItemData
{
    SGIItemBasePtr item;
    InternalItemData(SGIItemBase * item_) : item(item_) {}
};

typedef ReferencedDataT<InternalItemData> ReferencedInternalItemData;

struct InternalInfoData
{
    enum CommandId {
        CommandIdInvalid = 0,
        CommandIdAbout
    };
    CommandId command;
    InternalInfoData(CommandId command_) : command(command_) {}
};

typedef ReferencedDataT<InternalInfoData> ReferencedInternalInfoData;

} // namespace sgi
