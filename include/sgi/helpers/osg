inline sgi::Color osgColor(const osg::Vec4f & c)
{
    return sgi::Color(c.r(), c.g(), c.b(), c.a());
}

inline ::osg::Vec4f osgColor(const sgi::Color & c)
{
    return ::osg::Vec4f(c.r, c.g, c.b, c.a);
}

